    "target": "ES2015",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": ".",
